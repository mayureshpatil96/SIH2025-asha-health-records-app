# Server Configuration
NODE_ENV=development
PORT=5000
CLIENT_URL=http://localhost:3000

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/asha-health-records
# For production, use: mongodb+srv://username:password@cluster.mongodb.net/asha-health-records

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=your-refresh-token-secret-here
JWT_REFRESH_EXPIRE=30d

# Email Configuration (for notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# SMS Configuration (for alerts)
SMS_API_KEY=your-sms-api-key
SMS_API_URL=https://api.sms-provider.com/send

# File Upload Configuration
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760

# AI/ML Service Configuration
AI_SERVICE_URL=https://api.ai-service.com
AI_API_KEY=your-ai-api-key

# n8n Workflow Configuration
N8N_WEBHOOK_URL=https://your-n8n-instance.com/webhook/asha-alerts
N8N_API_KEY=your-n8n-api-key

# GPS/Location Services
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Push Notifications
FCM_SERVER_KEY=your-firebase-cloud-messaging-server-key
VAPID_PUBLIC_KEY=your-vapid-public-key
VAPID_PRIVATE_KEY=your-vapid-private-key

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Redis Configuration (for caching and sessions)
REDIS_URL=redis://localhost:6379

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# Security
BCRYPT_ROUNDS=12
CORS_ORIGIN=http://localhost:3000

# Feature Flags
ENABLE_OFFLINE_MODE=true
ENABLE_VOICE_INPUT=true
ENABLE_QR_SCANNING=true
ENABLE_AI_ALERTS=true
ENABLE_EMERGENCY_SOS=true

# Performance
CACHE_TTL=3600
MAX_CONCURRENT_UPLOADS=5
